<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>asdd</groupId>
  <artifactId>do_it</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>rails skeleton do_it</name>
 
  <repositories>
    <repository>
      <id>gemcutter</id>
      <releases>
	<updatePolicy>never</updatePolicy>
	<checksumPolicy>ignore</checksumPolicy>
      </releases>
      <snapshots>
	<enabled>false</enabled>
      </snapshots>
      <url>http://www.gemcutter.org/gems</url>
      <layout>gem</layout>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>saumya</id>
      <name>Saumya's Plugins</name>
      <url>http://mojo.saumya.de</url>
      <layout>default</layout>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>
    <dependency>
      <groupId>org.jruby.rack</groupId>
      <artifactId>jruby-rack</artifactId>
      <version>0.9.7-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.jruby</groupId>
      <artifactId>jruby-complete</artifactId>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>activerecord-jdbc-adapter</artifactId>
      <version>0.9.3</version>
      <type>gem</type>
      <classifier>java</classifier>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>jdbc-sqlite3</artifactId>
      <version>[0.0.0,)</version>
      <type>gem</type>
    </dependency>
    <dependency>
      <groupId>rubygems</groupId>
      <artifactId>rails</artifactId>
      <version>2.3.5</version>
      <type>gem</type>
    </dependency>
  </dependencies>
  <properties>
    <jruby.plugins.version>0.11.1</jruby.plugins.version>
    <jruby.fork>true</jruby.fork>
    <!-- that is actually the default but needed for the war plugin -->
    <jruby.gem.path>${project.build.directory}/wargems</jruby.gem.path>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>jruby-maven-plugin</artifactId>
	<version>${jruby.plugins.version}</version>
      </plugin>
      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>gem-maven-plugin</artifactId>
	<version>${jruby.plugins.version}</version>
	<extensions>true</extensions>
	<executions>
	  <execution>
	    <goals>
	      <goal>initialize</goal>
	    </goals>
	  </execution>
	</executions>
      </plugin>

      <plugin>
        <groupId>de.saumya.mojo</groupId>
        <artifactId>rails2-maven-plugin</artifactId>
        <version>${jruby.plugins.version}</version>
      </plugin>
<!--
        <executions>
           <execution>
            <id>rail-war</id>
            <goals>
              <goal>rails-freeze-gems</goal>
              <goal>war</goal>
            </goals>
           </execution>
        </executions>
      </plugin>
-->
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
	<version>2.0.2</version>
        <configuration>
	  <webResources>
	    <resource>
	      <directory>public</directory>
	    </resource>
	    <resource>
	      <directory>.</directory>
	      <targetPath>WEB-INF</targetPath>
	      <includes>
		<include>app/**</include>
		<include>config/**</include>
		<include>lib/**</include>
		<include>db/*</include>
		<include>vendor/**</include>
	      </includes>
	    </resource>
	    <resource>
	      <directory>${jruby.gem.path}</directory>
	      <targetPath>WEB-INF/gems</targetPath>
	    </resource>
	  </webResources>
        </configuration>	
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
	<version>7.0.1.v20091125</version>
      </plugin>
    </plugins>
  </build>
      
</project>
