<web-app>
  <context-param>
    <param-name>rails.root</param-name>
    <param-value>${basedir}</param-value>
  </context-param>
  <context-param>
    <param-name>gem.path</param-name>
    <param-value>${basedir}/target/rubygems</param-value>
  </context-param>
  <context-param>
    <param-name>rails.env</param-name>
    <param-value>development</param-value>
  </context-param>
  <context-param>
    <param-name>jruby.rack.layout_class</param-name>
    <param-value>JRuby::Rack::RailsFilesystemLayout</param-value>
  </context-param>
</web-app>
