<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <version>0.0.0</version>
  <groupId>com.example</groupId>
  <packaging>pom</packaging>
  <artifactId>dummy</artifactId>
  <build>
    <plugins>
      <plugin>
	<groupId>de.saumya.mojo</groupId>
	<artifactId>gemify-maven-plugin</artifactId>
	<version>@project.version@</version>
      </plugin>
      <plugin>
	<groupId>de.saumya.mojo</groupId>
	<artifactId>gem-maven-plugin</artifactId>
	<version>@project.version@</version>
	<executions>
	  <execution>
	    <id>install</id>
	    <phase>verify</phase>
	    <goals><goal>install</goal></goals>
	    <configuration>
	      <args>-l --ignore-dependencies --no-user-install
${project.build.directory}/mvn:commons-codec:commons-codec-1.2.0-java.gem
${project.build.directory}/mvn:commons-httpclient:commons-httpclient-3.1.0-java.gem
${project.build.directory}/mvn:commons-logging:commons-logging-1.0.4-java.gem
${project.build.directory}/mvn:nekohtml:nekohtml-1.9.6.2-java.gem
${project.build.directory}/mvn:nekohtml:xercesMinimal-1.9.6.2-java.gem
${project.build.directory}/mvn:org.apache.maven.wagon:wagon-http-shared-1.0.0.b.6-java.gem
${project.build.directory}/mvn:org.apache.maven.wagon:wagon-provider-api-1.0.0.b.6-java.gem
${project.build.directory}/mvn:org.codehaus.plexus:plexus-utils-1.4.2-java.gem
${project.build.directory}/mvn:xerces:xercesImpl-2.8.1-java.gem
${project.build.directory}/mvn:xml-apis:xml-apis-1.3.03-java.gem
	      </args>
	    </configuration>
	  </execution>
	  <execution>
	    <id>verify</id>
	    <phase>verify</phase>
	    <goals><goal>exec</goal></goals>
	    <configuration>
	      <script>
		require 'rubygems'

		def do_require(gem, expect = false)
                  print gem
                  print ' '
                  if expect
                    raise "gem #{gem} was required before" unless require gem
                    puts true
                  else 
                    raise "gem #{gem} was not required before" if require gem
                    puts false
		  end
		end

		do_require('maven/org.apache.maven.wagon/wagon-http-shared', true)
		do_require('maven/commons-codec/commons-codec')
		do_require('maven/commons-httpclient/commons-httpclient')
		do_require('maven/commons-logging/commons-logging')
		do_require('maven/nekohtml/nekohtml')
		do_require('maven/nekohtml/xercesMinimal')
		do_require('maven/org.apache.maven.wagon/wagon-provider-api')
		do_require('maven/org.codehaus.plexus/plexus-utils')
		do_require('maven/xml-apis/xml-apis', true)
		do_require('maven/xerces/xercesImpl', true)
	      </script>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</project>